.hidden-phone
  = link_to auth_at_provider_path(provider: :facebook), class: 'btn btn-large btn-facebook', data: { :"no-turbolink" => true } do
    %i.icon-facebook-sign.icon-large
    = t('login_with_facebook')
  %small.inline-block.why-facebook= link_to t('why_facebook'), '#why-facebook', data: { toggle: 'modal' }
.visible-phone  
  = link_to auth_at_provider_path(provider: :facebook), class: 'btn btn-facebook', data: { :"no-turbolink" => true } do
    %i.icon-facebook-sign
    = t('login_with_facebook')
%p.signin-terms
  %b
    %big.inline-block.new-identity=t('not_in_social_media') 
    %big.inline-block.login-identity= link_to t('login_now'), '/sessions/new' 
  %br
    = t('pages.home.signin_terms', appname: APP_CONFIG.app_name, terms_link: link_to(t('terms1'), :terms, :target=> '_blank', data: { :"no-turbolink" => true }), policy_link: link_to(t('policy1'), :policy, :target=> '_blank')).html_safe
 